<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".cliente.Principal">

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorBotones"
        android:id="@+id/verPrestamosButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="409dp"
        android:layout_marginBottom="274dp"
        android:text="Ver mis préstamos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorBotones"
        android:id="@+id/gestionarAhorrosButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginBottom="418dp"
        android:text="Gestionar mis Ahorros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorBotones"
        android:id="@+id/calcularCuotaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="313dp"
        android:layout_marginBottom="370dp"
        android:text="Calcula Cuota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorBotones"
        android:id="@+id/informacionPersonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="361dp"
        android:layout_marginBottom="322dp"
        android:text="Información Personal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorBotones"
        android:id="@+id/cerrarSesionButton"
        android:layout_width="192dp"
        android:layout_height="43dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="608dp"
        android:layout_marginBottom="80dp"
        android:text="Cerrar sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>